<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:shimmer="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Fragments.ActionFragment">


        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/relation"
                android:background="#f5f5f5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:id="@+id/linearLayoutTop"
                    android:background="@color/mainGreen"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">

                    <TextView
                        android:textColor="@android:color/white"
                        android:textStyle="italic"
                        android:background="#07000000"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="@string/Activities"
                        android:textSize="22sp"
                        android:layout_width="match_parent"
                        android:layout_height="30dp" />


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView

                            android:layout_marginTop="10dp"
                            android:paddingLeft="20dp"
                            android:textSize="20sp"
                            android:text="@string/Date"
                            android:layout_width="wrap_content"
                            android:textColor="@android:color/white"
                            android:layout_height="30dp" />

                        <Spinner

                            android:paddingLeft="15dp"
                            android:id="@+id/spinner"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"/>


                    </LinearLayout>
                </LinearLayout>



                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmer_view_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_below="@+id/linearLayoutTop"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical"
                    shimmer:duration="800">

                    <!-- Adding 5 rows of placeholders -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <include layout="@layout/data_placeholder_layout" />
                        <include layout="@layout/data_placeholder_layout" />
                        <include layout="@layout/data_placeholder_layout" />
                        <include layout="@layout/data_placeholder_layout" />
                    </LinearLayout>

                </com.facebook.shimmer.ShimmerFrameLayout>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler"
                    android:layout_marginTop="35dp"
                    android:layout_below="@+id/linearLayoutTop"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="35dp"
                    android:background="#11ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>


                <RelativeLayout
                    android:id="@+id/relativeBottom"
                    android:background="@color/mainGreen"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                </RelativeLayout>

            </RelativeLayout>


            <ImageView
                app:layout_anchor="@id/relativeBottom"
                app:layout_anchorGravity="top|center"
                android:layout_marginTop="10dp"
                android:src="@drawable/logodnmin"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"/>


            <android.support.design.widget.FloatingActionButton
                app:borderWidth="0dp"
                android:layout_marginRight="20dp"
                android:id="@+id/addFlBut"
                app:layout_anchor="@id/relativeBottom"
                app:layout_anchorGravity="top|right"
                android:backgroundTint="#8b6914"
                android:src="@drawable/ic_action_adduser_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </android.support.design.widget.CoordinatorLayout>

    </FrameLayout>

</layout>